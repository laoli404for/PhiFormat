{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "PhiFormat Chart File",

  "definitions": {
    "state": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "minimum": 0
        },
        "time": {
          "type": "integer",
          "minimum": 0
        },
        "value": {
          "type": "number"
        },
        "easing": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0,
              "maximum": 30    
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": ["id", "time", "value"]
    }
  },

  "type": "object",
  "properties": {
    "schemaVersion": {
      "type": "integer"
    },
    "musicOffset": {
      "type": "number"
    },
    "timingBase": {
      "type": "integer",
      "default": 48
    },
    "bpmList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "time": {
            "type": "integer",
            "minimum": 0
          },
          "bpm": {
            "type": "number",
            "exclusiveMinimum": 0
          }
        },
        "required": ["id", "time", "bpm"]
      }
    },
    "judgeLineList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "noteList": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "minimum": 0
                },
                "type": {
                  "type": "integer",
                  "enum": [1, 2, 3, 4]
                },
                "time": {
                  "type": "integer",
                  "minimum": 0
                },
                "holdTime": {
                  "type": "integer",
                  "minimum": 0
                },
                "x": {
                  "type": "number"
                },
                "width": {
                  "type": "number"
                },
                "speed": {
                  "type": "number"
                },
                "side": {
                  "type": "integer",
                  "enum": [-1, 1]
                },
                "isFake": {
                  "type": "boolean"
                }
              },
              "required": [
                "id",
                "type",
                "time",
                "holdTime",
                "x",
                "speed",
                "side",
                "isFake"
              ]
            }
          },
          "props": {
            "type": "object",
            "properties": {
              "controlX": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "controlY": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "angle": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "speed": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "noteAlpha": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "lineAlpha": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              },
              "displayRange": {
                "type": "array",
                "items": { "$ref": "#/definitions/state" }
              }
            },
            "required": [
              "controlX",
              "controlY",
              "angle",
              "speed",
              "noteAlpha",
              "lineAlpha",
              "displayRange"
            ]
          }
        },
        "required": ["id", "constructTime", "destructTime", "noteList", "props"]
      }
    }
  },
  "required": ["musicOffset", "timingBase", "bpmList", "judgeLineList"]
}
